---
import CercleImg from "@/assets/images/cercle.webp";
import CFOImg from "@/assets/images/cfo.webp";
import DetoxImg from "@/assets/images/detox.webp";
import EnfantImg from "@/assets/images/enfant.webp";
import Layout from "@/layouts/layout.astro";
import { Image } from "astro:assets";

// Page SEO data
const pageData = {
    title: "Tarifs",
    description:
        "Découvrez les tarifs transparents de Charlotte Drouilly, kinésiologue en Suisse. Séances de kinésiologie, massages bien-être et forfaits avantageux.",
    keywords:
        "tarifs kinésiologie Suisse, prix séance kinésiologie Genève, cercle de femmes tarifs, consultation kinésiologue prix Charlotte Drouilly",
};

// Services with dual pricing
const services = [
    {
        title: "Séance de Kinésiologie ENFANT",
        duration: "45 min.",
        priceFrance: "60 €",
        priceSuisse: "90 CHF",
        description: "",
        features: [
            "Sommeil difficile",
            "Énurésie",
            "Difficulté à se concentrer",
            "Diversification compliquée",
            "Gestion des émotions...",
        ],
        icon: "enfant",
    },
    {
        title: "Séance de Kinésiologie ADULTE",
        duration: "1h",
        priceFrance: "70 €",
        priceSuisse: "100 CHF",
        description: "",
        features: [
            "Libération émotionnelle",
            "Gestion du stress",
            "Identification des déséquilibres",
            "Techniques de rééquilibrage",
            "Conseils personnalisés...",
        ],
        icon: "adulte",
    },

    {
        title: "Détoxination énergétique",
        duration: "1h30",
        priceFrance: "80 €",
        priceSuisse: "120 CHF",
        description: "",
        features: [
            "Poils d'animaux",
            "Perturbateurs endocriniens",
            "Polluants de l'habitat",
            "Additifs alimentaires...",
        ],
        icon: "detox",
    },
    {
        title: "Cercle de femmes",
        duration: "2h",
        // priceFrance: "65 €",
        priceSuisse: "60 CHF",
        description: "",
        features: [
            "Un point entre femmes",
            "Libérer les blocages intérieurs",
            "Se connecter à sa force intérieure",
            "S'accorder une pause",
            "Honorer sa féminité",
        ],
        icon: "cercle",
    },
    {
        title: "Constellation sur l'eau",
        duration: "...",
        priceFrance: "... €",
        priceSuisse: "... CHF",
        description: "",
        features: ["En cours de formation..."],
        icon: "constellation",
    },
];

// Practical information
const paymentInfo = [
    "Espèces ou virement bancaire",
    "Paiement à la séance",
    "Factures disponibles sur demande",
];

const cancellationInfo = [
    "Annulation gratuite 48h avant",
    "Séance due si annulation tardive",
    "Report possible selon disponibilités",
];
---

<Layout
    title={pageData.title}
    description={pageData.description}
    keywords={pageData.keywords}
    type="website"
>
    <main role="main">
        <!-- Hero Section -->
        <section
            class="py-24 bg-secondary/50"
            aria-labelledby="tarifs-hero-heading"
            role="banner"
        >
            <div class="max-w-7xl mx-auto px-8 sm:px-12 lg:px-16">
                <header class="text-center mb-12">
                    <h1
                        id="tarifs-hero-heading"
                        class="font-sans font-bold text-4xl md:text-5xl text-foreground mb-6 leading-tight"
                    >
                        Tarifs et prestations
                    </h1>
                    <p
                        class="text-muted-foreground text-lg max-w-3xl mx-auto leading-relaxed"
                    >
                        Des <strong>tarifs transparents</strong> pour des accompagnements
                        de qualité en <strong>kinésiologie</strong>, adaptés à
                        vos besoins et votre budget
                    </p>
                </header>

                <!-- Important Notice -->
                <div class="max-w-4xl mx-auto">
                    <div
                        class="bg-amber-50 border border-amber-200 rounded-2xl p-6 mb-8"
                    >
                        <div class="flex items-start space-x-3 text-center">
                            <svg
                                class="w-6 h-6 text-amber-600 flex-shrink-0 mt-0.5"
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                aria-hidden="true"
                            >
                                <path
                                    d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"
                                ></path>
                                <path d="M12 9v4"></path>
                                <path d="M12 17h.01"></path>
                            </svg>
                            <div>
                                <h2 class="font-semibold text-amber-800 mb-2">
                                    Information importante
                                </h2>
                                <p
                                    class="text-amber-700 text-sm leading-relaxed"
                                >
                                    <strong>Remboursement :</strong> Pas encore membre
                                    des réseaux ASCA / RME. <br />
                                    Les mutuelles françaises ne prennent pas en charge
                                    mes consultations, que vous soyez frontalier
                                    ou résident en France.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                    {
                        services.map((service) => (
                            <article
                                class="border border-border/20 rounded-3xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 bg-card/60 backdrop-blur-lg"
                                itemscope
                                itemtype="https://schema.org/Service"
                            >
                                <div class="p-8 text-center">
                                    {service.icon === "enfant" && (
                                        <Image
                                            src={EnfantImg}
                                            alt="Enfants heureux"
                                            class="size-26 object-cover organic-shape mb-4 mx-auto"
                                            loading="lazy"
                                        />
                                    )}
                                    {service.icon === "adulte" && (
                                        <Image
                                            src={CFOImg}
                                            alt="CFO poser les mains"
                                            class="size-26 object-cover organic-shape mb-4 mx-auto"
                                            loading="lazy"
                                        />
                                    )}
                                    {service.icon === "detox" && (
                                        <Image
                                            src={DetoxImg}
                                            alt="CFO poser les mains"
                                            class="size-26 object-cover organic-shape mb-4 mx-auto"
                                            loading="lazy"
                                        />
                                    )}
                                    {service.icon === "cercle" && (
                                        <Image
                                            src={CercleImg}
                                            alt="CFO poser les mains"
                                            class="size-26 object-cover organic-shape mb-4 mx-auto"
                                            loading="lazy"
                                        />
                                    )}

                                    <h3
                                        class="font-sans font-bold text-xl text-foreground mb-4"
                                        itemprop="name"
                                    >
                                        {service.title}
                                    </h3>

                                    <div class="flex items-center justify-center space-x-6 text-muted-foreground mb-4">
                                        <div class="flex items-center">
                                            <svg
                                                class="w-4 h-4 mr-2"
                                                xmlns="http://www.w3.org/2000/svg"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                aria-hidden="true"
                                            >
                                                <circle
                                                    cx="12"
                                                    cy="12"
                                                    r="10"
                                                />
                                                <polyline points="12,6 12,12 16,14" />
                                            </svg>
                                            <span class="text-sm">
                                                {service.duration}
                                            </span>
                                        </div>

                                        <div class="flex items-center justify-center space-x-3">
                                            {service.priceFrance && (
                                                <div class="text-lg font-bold text-primary flex items-center justify-center">
                                                    <svg
                                                        xmlns="http://www.w3.org/2000/svg"
                                                        viewBox="0 0 3 2"
                                                        class="size-6 mr-2"
                                                    >
                                                        <rect
                                                            width="1"
                                                            height="2"
                                                            fill="#002654"
                                                        />
                                                        <rect
                                                            x="1"
                                                            width="1"
                                                            height="2"
                                                            fill="#ffffff"
                                                        />
                                                        <rect
                                                            x="2"
                                                            width="1"
                                                            height="2"
                                                            fill="#ce1126"
                                                        />
                                                    </svg>
                                                    {service.priceFrance}
                                                </div>
                                            )}
                                            <div class="w-px h-6 bg-border" />
                                            <div class="text-lg font-bold text-primary flex items-center">
                                                <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    viewBox="0 0 3 2"
                                                    class="size-5 mr-2 mb-0.5"
                                                >
                                                    <rect
                                                        width="3"
                                                        height="5"
                                                        fill="#dc143c"
                                                    />
                                                    <rect
                                                        x="1.25"
                                                        y="0.2"
                                                        width="0.5"
                                                        height="2"
                                                        fill="#ffffff"
                                                    />
                                                    <rect
                                                        x="0.375"
                                                        y="0.95"
                                                        width="2.25"
                                                        height="0.5"
                                                        fill="#ffffff"
                                                    />
                                                </svg>
                                                {service.priceSuisse}
                                            </div>
                                        </div>
                                    </div>

                                    <ul class="space-y-3 text-left" role="list">
                                        {service.features.map(
                                            (feature, featureIndex) => (
                                                <li
                                                    class="flex items-start text-sm text-muted-foreground"
                                                    role="listitem"
                                                >
                                                    <svg
                                                        class="w-4 h-4 text-primary mr-3 mt-0.5 flex-shrink-0"
                                                        xmlns="http://www.w3.org/2000/svg"
                                                        viewBox="0 0 24 24"
                                                        fill="none"
                                                        stroke="currentColor"
                                                        stroke-width="2"
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        aria-hidden="true"
                                                    >
                                                        <path d="M20 6 9 17l-5-5" />
                                                    </svg>
                                                    {feature}
                                                </li>
                                            ),
                                        )}
                                    </ul>
                                </div>
                            </article>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Packages Section -->
        <section
            class="py-24 bg-gradient-to-b from-background/30 to-card"
            aria-labelledby="packages-heading"
        >
            <div class="max-w-5xl mx-auto px-8 sm:px-12 lg:px-16">
                <header class="text-center mb-12">
                    <h2
                        id="info-heading"
                        class="font-sans font-bold text-3xl text-foreground mb-6 leading-tight"
                    >
                        Informations pratiques
                    </h2>
                </header>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <article
                        class="border border-border/20 rounded-3xl bg-card/60 backdrop-blur-lg"
                    >
                        <div class="p-8">
                            <h3
                                class="font-sans font-bold text-lg text-foreground mb-6 flex items-center"
                            >
                                <svg
                                    class="w-6 h-6 mr-3 text-primary"
                                    xmlns="http://www.w3.org/2000/svg"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    aria-hidden="true"
                                >
                                    <rect
                                        width="20"
                                        height="14"
                                        x="2"
                                        y="5"
                                        rx="2"></rect>
                                    <line x1="2" x2="22" y1="10" y2="10"></line>
                                </svg>
                                Modalités de paiement
                            </h3>
                            <ul
                                class="space-y-3 text-muted-foreground"
                                role="list"
                            >
                                {
                                    paymentInfo.map((info, index) => (
                                        <li
                                            class="flex items-start"
                                            role="listitem"
                                        >
                                            <svg
                                                class="w-4 h-4 text-primary mr-3 mt-1 flex-shrink-0"
                                                xmlns="http://www.w3.org/2000/svg"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                aria-hidden="true"
                                            >
                                                <path d="M20 6 9 17l-5-5" />
                                            </svg>
                                            {info}
                                        </li>
                                    ))
                                }
                            </ul>
                        </div>
                    </article>

                    <article
                        class="border border-border/20 rounded-3xl bg-card/60 backdrop-blur-lg"
                    >
                        <div class="p-8">
                            <h3
                                class="font-sans font-bold text-lg text-foreground mb-6 flex items-center"
                            >
                                <svg
                                    class="w-6 h-6 mr-3 text-primary"
                                    xmlns="http://www.w3.org/2000/svg"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    aria-hidden="true"
                                >
                                    <path d="M8 2v4"></path>
                                    <path d="M16 2v4"></path>
                                    <rect
                                        width="18"
                                        height="18"
                                        x="3"
                                        y="4"
                                        rx="2"></rect>
                                    <path d="M3 10h18"></path>
                                </svg>
                                Politique d'annulation
                            </h3>
                            <ul
                                class="space-y-3 text-muted-foreground"
                                role="list"
                            >
                                {
                                    cancellationInfo.map((info, index) => (
                                        <li
                                            class="flex items-start"
                                            role="listitem"
                                        >
                                            <svg
                                                class="w-4 h-4 text-primary mr-3 mt-1 flex-shrink-0"
                                                xmlns="http://www.w3.org/2000/svg"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                aria-hidden="true"
                                            >
                                                <path d="M20 6 9 17l-5-5" />
                                            </svg>
                                            {info}
                                        </li>
                                    ))
                                }
                            </ul>
                        </div>
                    </article>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    /* Screen reader only content */
    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
    }
</style>
